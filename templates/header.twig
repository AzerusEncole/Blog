<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="{{ req.getBasePath }}/vendor/twbs/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ req.getBasePath }}/css/main.css"/>
    <script src="{{ req.getBasePath }}/js/checkField.js"></script>
</head>
<body>
    <header>
        <ul class="nav nav-pills">
            {% if req.cookies.has('nick') %}
            <li>
                <div id="welcome">
                    Привет,
                    <span class="nick">{{ req.cookies.get('nick') }}</span>
                </div>
            </li>
            <li>
                <form action="{{ req.getBasePath }}/blog/{{ req.cookies.get('nick') }}" method="get">
                    <button class="btn btn-primary">Мой блог</button>
                </form>
            </li>
            <li>
                <form action="{{ req.getBasePath }}/users" method="get">
                    <button class="btn btn-primary">Пользователи</button>
                </form>
            </li>
            <li>
                <form action="{{ req.getBasePath }}/exit" method="get">
                    <button class="btn btn-primary">Выйти</button>
                </form>
            </li>
            {% else %}
            <li>
                <form action="{{ req.getBasePath }}/register" method="get">
                    <button class="btn btn-primary">Регистрация</button>
                </form>
            </li>
            <li>
                <form action="{{ req.getBasePath }}/login" method="get">
                    <button class="btn btn-primary">Войти</button>
                </form>
            </li>
            <li>
                <form action="{{ req.getBasePath }}/users" method="get">
                    <button class="btn btn-primary">Пользователи</button>
                </form>
            </li>
            {% endif %}
        </ul>
    </header>