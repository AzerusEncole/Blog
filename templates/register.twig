{% include 'header.twig' %}
<div class="container content">
    <div class="row">
        <div class="col-md-offset-2">
            <form action="{{ req.getBasePath }}/register" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="nick" class="col-md-2 control-label">Ник</label>
                    <div class="col-md-6{% if errors.nick is defined %} has-error{% endif %}">
                        <input type="text" class="form-control" id="nick" name="nick" value="{{ fields.nick }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-md-2 control-label">E-mail</label>
                    <div class="col-md-6{% if errors.email is defined %} has-error{% endif %}">
                        <input type="email" class="form-control" id="email" name="email" value="{{ fields.email }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-md-2 control-label">Пароль</label>
                    <div class="col-md-6{% if errors.pass is defined %} has-error{% endif %}">
                        <input type="password" class="form-control" id="pass" name="pass" value="{{ fields.pass }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="confirmPass" class="col-md-2 control-label">Повторите пароль</label>
                    <div class="col-md-6{% if errors.confirmPass is defined %} has-error{% endif %}">
                        <input type="password" class="form-control" id="confirmPass" name="confirmPass"  value="{{ fields.confirmPass }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="age" class="col-md-2 control-label">Дата рождения</label>
                    <div class="col-md-2{% if errors.day is defined %} has-error{% endif %}">
                        <select class="form-control" name="age[day]" id="age">
                            <option disabled selected>День</option>
                            {% for i in 1..31 %}
                                <option>{% if i < 10 %}0{% endif %}{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2{% if errors.month is defined %} has-error{% endif %}">
                        <select class="form-control" name="age[month]" id="age">
                            <option disabled selected>Месяц</option>
                            {% for i in 1..12 %}
                                <option>{% if i < 10 %}0{% endif %}{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2{% if errors.year is defined %} has-error{% endif %}">
                        <select class="form-control" name="age[year]" id="age">
                            <option disabled selected>Год</option>
                            {% for i in 2005..1900 %}
                                <option>{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <button type="submit" class="btn btn-default">Создать аккаунт</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% include 'footer.twig' %}